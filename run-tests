set -e

if [ ! $(command -v "lf") ]; then
	echo "ERROR: 'lf' not found in PATH, you should install lf"
	exit 1
fi

echo "Running all tests..."
echo

test_files=`ls tests/`

for t in $test_files; do
	if [ -f "tests/${t}" ]; then
		echo "Running test: ${t} ... "
		bash "tests/${t}"
		echo "\033[0;32mDONE\033[0m"
	fi
done

echo
echo "All tests passed!"

#
# End run-tests
#


. ./tests-funcs

# run-test <test-name> <test-command> <expect-to-contain-output> <expect-exit-code>

# check to see if bc is installed, if not, then skip this test.
if ! require_cmd "bc"; then
    echo "bc is require for this test; skipping"
    exit 1
fi

# we -1 because ls outputs one extra line
run-test "lf -p /dev | wc, ls -l | wc" "./lf -p /dev | wc -l" "$(echo $(ls -l /dev | wc -l)-1 | bc)" "" 0

# Try again with color
run-test "lf -p (color) /dev | wc, ls -l | wc" "./lf -p --color=on /dev | wc -l" "$(echo $(ls -l /dev | wc -l)-1 | bc)" "" 0

run-test "lf -p testdata | wc, ls -l | wc" "./lf -p tests/testdata | wc -l" "$(echo $(ls -l tests/testdata | wc -l)-1 | bc)" "" 0

